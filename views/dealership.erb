<h1 class="text-center"><%= @dealership.name %></h1>

<div class="container-fluid">
<li class="list-group-item">
    <img class="center-block img-responsive" style="max-height:300px" src="https://media.giphy.com/media/X5quY9aOi0cJa/giphy.gif
"></li>
</div>

<h3 style="text-align: center">Here are all the cars in this dealership:</h3>

    <% @dealership.cars().each() do |car| %>
      <% if car != nil %>
        <form action="/vehicles/<%= car.id() %>">
            <button class="btn btn-success btn-cons center-block">
                <%= car.make %>
                <%= car.model %>
                <%= car.year %>
                <%= car.color %>
            </button>
        </form>
      <% end %>
    <% end %>

<form action="<%= @dealership.id%>/vehicles/new">
    <button class="btn btn-info center-block">
        Add a new vehicle
    </button>
</form>

<form action="/">
    <button class="btn btn-primary center-block">
        Return to Main Page
    </button>
</form>
